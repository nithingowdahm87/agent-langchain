# .github/workflows/main.yml
name: sample_app

on:
  push:
    branches:
      - main

permissions:
  contents: read
  id-token: write
  security-events: write

jobs:
  compile:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Compile
        run: |
          # Compile step
          echo "Compilation completed"

  secrets-scan:
    needs: [compile]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Gitleaks scan
        uses: gitleaks/gitleaks-action@v2
        with:
          # Gitleaks configuration
          config: .gitleaks.toml

  trivy-fs:
    needs: [secrets-scan]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Trivy file system scan
        uses: aquasecurity/trivy-action@v0.32.1
        with:
          # Trivy configuration
          format: sarif
          output: trivy-sarif.sarif
          severity: CRITICAL,HIGH

  sonar:
    needs: [trivy-fs]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Sonar analysis
        uses: sonarcloud/sonarcloud-github-action@v1.12.1
        with:
          # SonarCloud configuration
          github-token: ${{ secrets.GITHUB_TOKEN }}
          github-repository: ${{ github.repository }}
          github-branch: ${{ github.ref_name }}

  owasp-zap:
    needs: [sonar]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: OWASP ZAP scan
        uses: zaproxy/action-zap@v0.2.1
        with:
          # ZAP configuration
          target: http://localhost:3000

  docker-build:
    needs: [owasp-zap]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          # Docker Hub credentials
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}
      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          # Docker build configuration
          context: .
          push: true
          tags: ${{ secrets.DOCKER_USERNAME }}/sample_app:sha-${{ github.sha }}
          provenance: false

  trivy-image:
    needs: [docker-build]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Trivy image scan
        uses: aquasecurity/trivy-action@v0.32.1
        with:
          # Trivy configuration
          image: ${{ secrets.DOCKER_USERNAME }}/sample_app:sha-${{ github.sha }}
          format: sarif
          output: trivy-sarif.sarif
          severity: CRITICAL,HIGH

  notify:
    needs: [trivy-image]
    if: always()
    runs-on: ubuntu-latest
    steps:
      - name: Send notification
        uses: 8398a7/action-slack@v3
        with:
          # Slack configuration
          slack-token: ${{ secrets.SLACK_TOKEN }}
          channel: sample_app
          status: ${{ job.status }}
          text: |
            Repository: ${{ github.repository }}
            Branch: ${{ github.ref_name }}
            SHA: ${{ github.sha }}
            Job status: ${{ job.status }}

# Secrets reference table
# DOCKER_USERNAME: Docker Hub username
# DOCKER_PASSWORD: Docker Hub password
# GITHUB_TOKEN: GitHub token
# SLACK_TOKEN: Slack token