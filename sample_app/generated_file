name: CI/CD Pipeline

on:
  push:
    branches:
      - main

permissions:
  contents: read
  id-token: write
  security-events: write

jobs:
  compile:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Compile
        run: |
          # Compile code here
          echo "Compilation successful"

  secrets-scan:
    runs-on: ubuntu-latest
    needs: [compile]
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Gitleaks scan
        uses: gitleaks/gitleaks-action@v2
      - name: Trivy FS scan
        uses: aquasecurity/trivy-action@v0.24.0
        with:
          format: sarif
          output: trivy-sarif.sarif

  trivy-fs:
    runs-on: ubuntu-latest
    needs: [secrets-scan]
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Trivy FS scan
        uses: aquasecurity/trivy-action@v0.24.0
        with:
          format: sarif
          output: trivy-sarif.sarif

  sonar:
    runs-on: ubuntu-latest
    needs: [trivy-fs]
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Sonar scan
        uses: sonarcloud/sonarcloud-github-action@v1.12
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          github-repository: ${{ github.repository }}
          github-branch: ${{ github.ref_name }}

  owasp-zap:
    runs-on: ubuntu-latest
    needs: [sonar]
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: OWASP ZAP scan
        uses: zaproxy/action@v0.2.1
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          github-repository: ${{ github.repository }}
          github-branch: ${{ github.ref_name }}

  docker-build:
    runs-on: ubuntu-latest
    needs: [owasp-zap]
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}
      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: myapp:sha-${{ github.sha }}
          provenance: false

  trivy-image:
    runs-on: ubuntu-latest
    needs: [docker-build]
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Trivy image scan
        uses: aquasecurity/trivy-action@v0.24.0
        with:
          format: sarif
          output: trivy-sarif.sarif
          image: myapp:sha-${{ github.sha }}

  notify:
    runs-on: ubuntu-latest
    needs: [trivy-image]
    if: always()
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Send Slack notification
        uses: 8398a7/action-slack@v3
        with:
          slack-token: ${{ secrets.SLACK_TOKEN }}
          channel: ${{ secrets.SLACK_CHANNEL }}
          message: |
            Repository: ${{ github.repository }}
            Branch: ${{ github.ref_name }}
            SHA: ${{ github.sha }}
            Job status: ${{ job.status }}
      - name: Send email notification
        uses: dawidd6/action-send-mail@v6
        with:
          server: ${{ secrets.EMAIL_SERVER }}
          username: ${{ secrets.EMAIL_USERNAME }}
          password: ${{ secrets.EMAIL_PASSWORD }}
          to: ${{ secrets.EMAIL_TO }}
          subject: |
            Repository: ${{ github.repository }}
            Branch: ${{ github.ref_name }}
            SHA: ${{ github.sha }}
            Job status: ${{ job.status }}
          body: |
            Repository: ${{ github.repository }}
            Branch: ${{ github.ref_name }}
            SHA: ${{ github.sha }}
            Job status: ${{ job.status }}